<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DistributorSales" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


    </style>
    <style name="StatusColoredActionBarTheme" parent="Theme.DistributorSales">
        <item name="colorPrimaryDark">@color/statuscolor</item>
<!--        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="StatusWhiteColoredActionBarTheme" parent="Theme.DistributorSales">
        <item name="colorPrimaryDark">@color/white</item>
        <!--        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="bottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:top">4dp</item>
    </style>

    <style name="bottomNavigationStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:top">4dp</item>
    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft" tools:ignore="PrivateResource">6dp</item>
        <item name="android:paddingRight" tools:ignore="PrivateResource">6dp</item>
<!--        <item name="android:paddingLeft" tools:ignore="PrivateResource">4dp</item>-->
<!--        <item name="android:paddingRight" tools:ignore="PrivateResource">4dp</item>-->
        <item name="strokeColor">#2D358F</item>
        <item name="android:solidColor">#2D358F</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth" tools:ignore="PrivateResource">@dimen/mtrl_btn_stroke_size</item>
    </style>
    <style name="Widget.MaterialComponents.Button.OutlinedButton.pink" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft" tools:ignore="PrivateResource">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight" tools:ignore="PrivateResource">@dimen/mtrl_btn_padding_right</item>

        <item name="strokeColor">@color/buttoncolor</item>
        <item name="strokeWidth" tools:ignore="PrivateResource">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/Custom.MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/Custom.MaterialAlertDialog.App.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Custom.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Custom.ButtonStyle</item>
    </style>
    <style name="Custom.MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Custom.MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="Custom.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="rippleColor">@color/indicatorDefault</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>



</resources>