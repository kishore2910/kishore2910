<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/secondlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/gradient" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="Setting"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/action_bar"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_orderhistory" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="Support"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/historynext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_nextlist" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/support"
            android:layout_marginLeft="80dp"
            android:background="#F1F1F1" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/viewone"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_about_shop" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ordercollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/collectionnext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_nextlist" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewtwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/about"
            android:layout_marginLeft="80dp"
            android:background="#F1F1F1" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/viewtwo"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_sales_return" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/salesreturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="Terms and conditions"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/salesnext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_nextlist" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewthree"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/terms"
            android:layout_marginLeft="80dp"
            android:background="#F1F1F1" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/viewthree"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_privacy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/privacypolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/privacynext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_nextlist" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/privacy"
            android:layout_marginLeft="80dp"
            android:background="#F1F1F1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="10dp"
            android:fontFamily="@font/medium"
            android:text="Logout"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>